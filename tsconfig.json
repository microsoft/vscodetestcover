{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./out/",
        "module": "commonjs",
        "target": "ES6",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "out"
    ]
}